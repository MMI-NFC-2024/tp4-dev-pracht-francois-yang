---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <div class="container mx-auto px-4 py-8">
   
    <nav class="mb-8">
      <h2 class="text-lg font-semibold mb-4 text-gray-700">Navigation vers les exemples :</h2>
      
      <!-- Section Penguins -->
      <h3 class="text-md font-medium mb-3 text-gray-600">Exemples Penguins :</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <a 
          href="/simple" 
          class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Plot Simple
        </a>
        <a 
          href="/simplepenguins" 
          class="bg-green-500 hover:bg-green-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Plot Penguin
        </a>
        <a 
          href="/penguin-filter" 
          class="bg-purple-500 hover:bg-purple-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Filtre Penguin
        </a>
        <a 
          href="/several-penguin-filter" 
          class="bg-orange-500 hover:bg-orange-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Filtres multiples Penguin
        </a>
      </div>

      <!-- Section Industries -->
      <h3 class="text-md font-medium mb-3 text-gray-600">Exemples Industries :</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <a 
          href="/simpleindustries" 
          class="bg-teal-500 hover:bg-teal-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Plot Industries Simple
        </a>
        <a 
          href="/industries-filter" 
          class="bg-cyan-500 hover:bg-cyan-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Filtre Industries
        </a>
        <a 
          href="/several-industries-filter" 
          class="bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          Filtres multiples Industries
        </a>
      </div>
    </nav>

    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Test Astro et Plot</h1>
      <p class="text-lg text-gray-600">Visualisation des donn√©es avec ObservableHQ Plot</p>
    </div>

  
    <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
      <h2 class="text-2xl font-semibold mb-4 text-gray-700">Graphique des Penguins</h2>
      <div class="flex justify-center">
        <PlotFigure
          options={{
            marks: [
              Plot.dot(penguins, {
                x: "culmen_length_mm",
                y: "culmen_depth_mm",
                stroke: "species",
              }),
            ],
          }}
        />
      </div>
    </div>
  </div>
</Layout>
